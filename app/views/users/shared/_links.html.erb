<%- if controller_name != 'sessions' %>
  <p class="btn btn-info btn-lg"><%= link_to "Ingresar", new_session_path(resource_name) %><br /></p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="btn btn-info btn-lg"><%= link_to "Registrar", new_registration_path(resource_name) %><br /></p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="btn btn-info btn-lg"><%= link_to "Olvidó tu contraseña?", new_password_path(resource_name) %><br /></p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="btn btn-info btn-lg"><%= link_to "No has recibido las instructiones de confirmación?", new_confirmation_path(resource_name) %><br /></p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <p class="btn btn-info btn-lg"><%= link_to "No has recibido las instruciones del Desbloqueo?", new_unlock_path(resource_name) %><br /></p>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p class="btn btn-info btn-lg"><%= link_to "Registrado con #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br /></p>
  <% end -%>
<% end -%>
