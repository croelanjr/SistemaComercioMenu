<%= simple_form_for(@comida) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dia, collection: 1..30 %>
    <%= f.input :fecha, collection: ["Lunes", "Martes", "Miercoles", "Jueves", "Viernes"] %>
    <%= f.input :codigo %>
    <%= f.input :tipo, collection: ["Ensalada", "Sopa", "Segundo", "Carta"] %>
    <%= f.input :menu, collection: @arreglo_menu %>
    <%= f.input :local, collection: @arreglo %>
    <%= f.input :cantidad %>
    <%= f.input :precio, as: :float %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

